<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp">
        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="72dp"
            android:layout_height="62dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/hair_catalog"
            android:scaleType="centerCrop"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/menuTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="メニュータイトル。メニュータイトル。メニュータイトル。メニュータイトル。メニュータイトル。メニュータイトル。メニュータイトル。メニュータイトル。"
            app:layout_constraintStart_toEndOf="@id/menuImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/menuImageView"
            />
        <ImageView
            android:id="@+id/locationImageView"
            android:layout_width="14dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_location_on_white_24dp"
            android:scaleType="centerCrop"
            android:tint="#5d5d5d"
            app:layout_constraintStart_toStartOf="@id/menuTitleTextView"
            app:layout_constraintTop_toTopOf="@id/locationTextView"
            app:layout_constraintBottom_toBottomOf="@id/locationTextView"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="渋谷"
            app:layout_constraintBottom_toBottomOf="@id/menuImageView"
            app:layout_constraintStart_toEndOf="@id/locationImageView" />
        <ImageView
            android:id="@+id/storeImageView"
            android:layout_width="14dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_store_white_24dp"
            android:scaleType="centerCrop"
            android:tint="#5d5d5d"
            app:layout_constraintStart_toEndOf="@id/locationTextView"
            app:layout_constraintTop_toTopOf="@id/locationImageView"
            app:layout_constraintBottom_toBottomOf="@id/locationTextView"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/storeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="店名"
            app:layout_constraintTop_toTopOf="@id/locationImageView"
            app:layout_constraintStart_toEndOf="@id/storeImageView" />
        <ImageView
            android:id="@+id/timeImageView"
            android:layout_width="14dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_access_time_white_24dp"
            android:scaleType="centerCrop"
            android:tint="#5d5d5d"
            app:layout_constraintStart_toEndOf="@id/storeTextView"
            app:layout_constraintTop_toTopOf="@id/locationImageView"
            app:layout_constraintBottom_toBottomOf="@id/locationTextView"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="120分"
            app:layout_constraintTop_toTopOf="@id/locationImageView"
            app:layout_constraintStart_toEndOf="@id/timeImageView" />
        <training20.tcmobile.mvvm.views.TagsView
            android:id="@+id/treatmentTagsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/menuImageView"
            app:layout_constraintStart_toStartOf="@id/menuImageView"
            app:layout_constraintEnd_toEndOf="@id/menuTitleTextView" />
        <TextView
            android:id="@+id/menuDetailsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            android:text="メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。メニュー詳細。"
            app:layout_constraintStart_toStartOf="@id/menuImageView"
            app:layout_constraintEnd_toEndOf="@id/menuTitleTextView"
            app:layout_constraintTop_toBottomOf="@id/treatmentTagsView"
            />
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:text="¥2,000"
            app:layout_constraintTop_toBottomOf="@id/menuDetailsTextView"
            app:layout_constraintEnd_toEndOf="@id/menuDetailsTextView"/>
        <training20.tcmobile.mvvm.views.TagsView
            android:id="@+id/menuTagsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/menuImageView"
            app:layout_constraintEnd_toEndOf="@id/menuTitleTextView"
            app:layout_constraintTop_toBottomOf="@id/priceTextView"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileCircleImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/user_icon"
            app:layout_constraintStart_toStartOf="@id/menuImageView"
            app:layout_constraintTop_toBottomOf="@id/menuTagsView"/>
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="13sp"
            android:text="USER NAME"
            app:layout_constraintTop_toTopOf="@id/profileCircleImageView"
            app:layout_constraintStart_toEndOf="@id/profileCircleImageView" />
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:minWidth="18dp"
            android:minHeight="18dp"
            android:rating="3.5"
            app:mrb_progressTint="@color/ratingStar"
            app:mrb_secondaryProgressTint="@color/ratingStar"
            app:layout_constraintBottom_toBottomOf="@id/userNameTextView"
            app:layout_constraintStart_toEndOf="@id/userNameTextView"
            style="@style/Widget.MaterialRatingBar.RatingBar" />
        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="3.5"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintStart_toEndOf="@id/ratingBar" />
        <TextView
            android:id="@+id/experienceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="経験年数3年"
            app:layout_constraintTop_toBottomOf="@id/userNameTextView"
            app:layout_constraintStart_toStartOf="@id/userNameTextView" />
        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="22歳"
            app:layout_constraintTop_toTopOf="@id/experienceTextView"
            app:layout_constraintStart_toEndOf="@id/experienceTextView" />
        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="男性"
            app:layout_constraintTop_toTopOf="@id/experienceTextView"
            app:layout_constraintStart_toEndOf="@id/ageTextView" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="予約"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/experienceTextView"
            app:layout_constraintEnd_toEndOf="@id/menuTitleTextView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>